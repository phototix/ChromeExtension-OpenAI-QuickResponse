{
  "manifest_version": 3,
  "name": "OpenAI Context Assistant",
  "version": "1.0",
  "description": "Send selected text to OpenAI API via right-click",
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "notifications",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    }
  }
}
